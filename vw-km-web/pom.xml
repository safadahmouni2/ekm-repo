				<prop.application.web.facelets.RECREATE_VALUE_EXPRESSION_ON_BUILD_BEFORE_RESTORE>false</prop.application.web.facelets.RECREATE_VALUE_EXPRESSION_ON_BUILD_BEFORE_RESTORE>
				<prop.application.web.faces.numberOfViewsInSession>15</prop.application.web.faces.numberOfViewsInSession>
				<prop.application.web.faces.numberOfLogicalViews>1</prop.application.web.faces.numberOfLogicalViews>
				<prop.application.web.faces.compressViewState>true</prop.application.web.faces.compressViewState>
