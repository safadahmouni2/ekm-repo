		</dependency>
		<!-- servlet -->
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
		</dependency>
		<dependency>
			<groupId>javax.servlet.jsp</groupId>
			<artifactId>javax.servlet.jsp-api</artifactId>
		</dependency>
		<dependency>
			<groupId>javax.el</groupId>
			<artifactId>el-api</artifactId>
		</dependency>
		<!-- to fix: Kostenbaustein / Kostenelement / Stundensatzkataloge > Page 
			is always refreshed after filling in a field with numbers and then clicking 
			outside the field -->
		<dependency>
			<groupId>com.sun.el</groupId>
			<artifactId>el-ri</artifactId>
			<version>3.0.4</version>
			<exclusions>
				<exclusion>
					<groupId>jakarta.el</groupId>
					<artifactId>jakarta.el-api</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<!-- icefaces -->
		<dependency>
			<groupId>org.icefaces</groupId>
			<artifactId>icefaces-ee-ace</artifactId>
			<scope>system</scope>
			<systemPath>${project.basedir}/lib/icefaces-ee-ace.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>org.icefaces</groupId>
			<artifactId>icefaces-ee</artifactId>
			<scope>system</scope>
			<systemPath>${project.basedir}/lib/icefaces-ee.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>org.icefaces</groupId>
			<artifactId>icefaces-ee-ext</artifactId>
			<scope>system</scope>
			<systemPath>${project.basedir}/lib/icefaces-ee-ext.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>org.icefaces</groupId>
			<artifactId>icefaces-facelets</artifactId>
			<scope>system</scope>
			<systemPath>${project.basedir}/lib/icefaces-facelets.jar</systemPath>
		</dependency>
		<!-- commons -->
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-collections4</artifactId>
		</dependency>
		<dependency>
			<groupId>commons-fileupload</groupId>
			<artifactId>commons-fileupload</artifactId>
		</dependency>
	</dependencies>

