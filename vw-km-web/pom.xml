<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>vwg.vw.km</groupId>
		<artifactId>vw-km-parent</artifactId>
		<version>3-2-1-8</version>
	</parent>
	<artifactId>vw-km-web</artifactId>
	<packaging>war</packaging>
	<properties>
		<webapp.source.directory>${project.basedir}/src/main/webapp</webapp.source.directory>
	</properties>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<excludes>
					<exclude>**/*.xls</exclude>
					<exclude>**/*.xlsx</exclude>
				</excludes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>false</filtering>
				<includes>
					<include>**/*.xls</include>
					<include>**/*.xlsx</include>
				</includes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>3.3.2</version>
				<configuration>
					<failOnMissingWebXml>false</failOnMissingWebXml>
					<warSourceDirectory>${webapp.source.directory}</warSourceDirectory>
					<webResources>
						<resource>
							<directory>${webapp.source.directory}</directory>
							<filtering>false</filtering>
							<excludes>
								<include>**/web.xml</include>
								<exclude>**/statisticPage.xhtml</exclude>
								<include>**/welcomePage.xhtml</include>
							</excludes>
						</resource>
						<resource>
							<directory>${webapp.source.directory}</directory>
							<filtering>true</filtering>
							<includes>
								<include>**/web.xml</include>
								<include>**/statisticPage.xhtml</include>
								<include>**/welcomePage.xhtml</include>
							</includes>
						</resource>
						<resource>
							<directory>${project.basedir}/lib</directory>
							<targetPath>WEB-INF/lib</targetPath>
						</resource>
					</webResources>
				</configuration>
			</plugin>

		</plugins>
		<finalName>process_designer</finalName>
	</build>
	<dependencies>
		<!-- VW KM modules -->
		<dependency>
			<groupId>vwg.vw.km</groupId>
			<artifactId>vw-km-kernel</artifactId>
		</dependency>
		<!-- spring -->
		<dependency>
			<groupId>org.springframework</groupId>
